general {
  colors = true
  interval = 5
}

order += "disk /"
order += "battery all"
order += "wireless _first_"
order += "ethernet _first_"
order += "tztime local"

disk "/" {
  format = "%avail"
}

battery all {
        format = "%status %percentage %remaining"
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

tztime local {
  format = "%Y-%m-%d %I:%M:%S %p"
}

